uniform sampler2D gcolor;
uniform sampler2D colortex1;
const bool colortex1Clear = false;
varying vec2 texcoord;
uniform float viewWidth, viewHeight;
uniform float frameTime;

void main()
{
    vec3 color = texture2D(gcolor, texcoord).rgb;
    
    /*vec3 darks = vec3(TONEMAPPING_BLACK);
    vec3 highlights = vec3(TONEMAPPING_WHITE);
    vec3 mids = vec3((darks + highlights) / 2);*/

    #ifdef TONEMAPPING_ENABLED
        if(average(color) < 0.33)
        {
            color *= 1 + TONEMAPPING_SHADOWS;
        }
        else if(average(color) > 0.66)
        {
            color *= 1 + TONEMAPPING_HIGHLIGHTS;
        }
    #endif
    #ifdef GRADING_ENABLED
    //mat3 gradingColor[0] = 
    #endif

    vec3 exposureSample = texture2DLod(gcolor, vec2(0.5, 0.5), 7.0).rgb; //get average brightness of an... area... ( ͡° ͜ʖ ͡°)
    float screenLuminance = dot(vec3(1.0), exposureSample) * 4.0; //turns that into a float
    float temporalExposure = texture2D(colortex1, texcoord).a; //replace texcoord at some point
    screenLuminance = mix(temporalExposure, screenLuminance, frameTime * 3.0);

    color *= 1.0/screenLuminance;

    color = hejlBurgess(color);

    //color = vec3(screenExposure);

    /* DRAWBUFFERS:01 */
    gl_FragData[0] = vec4(color, 1.0);
    gl_FragData[1] = vec4(vec3(0.0), screenLuminance);
}